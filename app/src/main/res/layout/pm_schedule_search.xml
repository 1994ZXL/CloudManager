<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Parent_LayoutStyle">

    <ScrollView style="@style/ScrollView_Style">

        <LinearLayout style="@style/linearLayoutStyle">

            <LinearLayout style="@style/Toptitle_LayoutStyle">

                <TextView
                    style="@style/toptextview_left"
                    android:text="@string/text_return" />

                <TextView
                    style="@style/toptextview_center"
                    android:text="@string/mission_choose" />

                <TextView
                    style="@style/topview_right"
                    android:text="@string/text_clean" />

            </LinearLayout>

            <!--提交时间-->
            <LinearLayout style="@style/Viewline_LayoutStyle">

                <TextView
                    style="@style/Text_view_Style"
                    android:text="@string/submit_time" />

                <TextView
                    android:id="@+id/pm_schedule_search_beginTime"
                    style="@style/Text_view_Style"
                    android:text="@string/project_begin_time_textview" />

                <TextView
                    android:id="@+id/pm_schedule_search_endTime"
                    style="@style/Text_view_Style"
                    android:text="@string/project_end_time_textview" />

            </LinearLayout>

            <!--进度-->
            <LinearLayout style="@style/Viewline_LayoutStyle">

                <TextView
                    android:id="@+id/check_begin_time_textview"
                    style="@style/Text_view_Style"
                    android:text="@string/schedule" />

                <EditText
                    android:id="@+id/pm_schedule_percent_from"
                    android:hint="@string/input_mission_progress"
                    style="@style/Text_view_Style"/>

                <TextView
                    android:layout_width="10sp"
                    android:layout_height="35sp"
                    android:text="—" />

                <EditText
                    android:id="@+id/pm_schedule_percent_to"
                    android:hint="@string/input_mission_progress"
                    style="@style/Text_view_Style" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/pm_schedule_percent_searchBtn"
        style="@style/SearchButton" />

</LinearLayout>

