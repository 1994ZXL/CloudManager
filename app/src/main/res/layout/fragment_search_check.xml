<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Parent_LayoutStyle"
    tools:context=".check.myCheck.SearchCheckFragment">

    <LinearLayout style="@style/Toptitle_LayoutStyle">

        <TextView
            android:id="@+id/fragment_search_check_back"
            style="@style/toptextview_left"
            android:text="@string/text_return" />

        <TextView
            style="@style/toptextview_center"
            android:text="@string/check_query" />

        <TextView
            android:id="@+id/fragment_search_check_clean"
            style="@style/topview_right"
            android:text="@string/text_clean" />

    </LinearLayout>

    <ScrollView style="@style/ScrollView_Style">

        <LinearLayout style="@style/linearLayoutStyle">

            <LinearLayout style="@style/linearLayoutStyle">

                <LinearLayout style="@style/Viewline_LayoutStyle">

                    <TextView
                        android:id="@+id/check_begin_time_textview"
                        style="@style/Text_view_Style"
                        android:text="@string/check_time" />

                    <TextView
                        android:id="@+id/check_begin_time_button"
                        style="@style/Text_view_Style"
                        android:text="@string/dutytime" />

                    <TextView
                        style="@style/Text_Style"
                        android:text="@string/text" />

                    <TextView
                        android:id="@+id/check_end_time_button"
                        style="@style/Text_view_Style"
                        android:text="@string/offdutytime" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/search_check_search_button"
        style="@style/SearchButton" />

</LinearLayout>
