<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".publicSearch.PSAddressBook.ListSearchFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                style="@style/linearLayoutStyle"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/list_project_name_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/project_name_edittext"
                        android:layout_weight="1"
                        android:textSize="20dp"/>

                    <EditText
                        android:id="@+id/list_project_name_edittext"
                        style="@style/editTextZ"
                        android:layout_weight="6"/>
                </LinearLayout>

                <!-- 姓名-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <TextView
                        style="@style/SearchTextViewStyle"
                        android:text="@string/project_customer_name"
                        android:layout_weight="1"/>

                    <EditText
                        style="@style/editTextZ"
                        android:layout_weight="12"
                        android:id="@+id/list_customer_name_EditText"/>

                </LinearLayout>

                <!-- 性别-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <TextView
                        style="@style/SearchTextViewStyle"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="@string/sex"
                        android:layout_gravity="center_vertical" />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/list_customer_sex_sprinner">

                    </Spinner>
                </LinearLayout>

                <!-- 手机-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <TextView
                        style="@style/SearchTextViewStyle"
                        android:text="@string/phone"
                        android:layout_weight="2"
                        />
                    <EditText
                        style="@style/editTextZ"
                        android:id="@+id/list_customer_phone_editText"
                        android:layout_weight="5"
                        />
                </LinearLayout>

                <!-- QQ-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <TextView
                        style="@style/SearchTextViewStyle"
                        android:text="@string/qq"
                        android:layout_weight="2"/>
                    <EditText
                        style="@style/editTextZ"
                        android:id="@+id/list_cutomer_qq_editText"
                        android:layout_weight="4"/>
                </LinearLayout>

                <!-- 微信-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <TextView
                        style="@style/SearchTextViewStyle"
                        android:text="@string/wechat"
                        android:layout_weight="2"/>
                    <EditText
                        style="@style/editTextZ"
                        android:id="@+id/list_customer_wechat_editText"
                        android:layout_weight="5"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/project_list_check_button"
                style="@style/SearchButton"
                android:text="@string/check_button"
                 />
        </LinearLayout>
    </ScrollView>




</LinearLayout>
