<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Parent_LayoutStyle"
    tools:context=".publicSearch.PSAddressBook.ListSearchFragment">

    <ScrollView
        style="@style/ScrollView_Style">

        <LinearLayout
            style="@style/linearLayoutStyle">

            <LinearLayout
                style="@style/Toptitle_LayoutStyle">

                <TextView
                    style="@style/toptextview_left"
                    android:text="@string/text_return"/>

                <TextView
                    style="@style/toptextview_center"
                    android:text="@string/project_choose"/>

                <TextView
                    style="@style/topview_right"
                    android:text="@string/text_clean"/>

            </LinearLayout>

            <LinearLayout
                style="@style/linearLayoutStyle">

                <LinearLayout
                    style="@style/Viewline_LayoutStyle">

                    <TextView
                        android:id="@+id/list_project_name_textview"
                        style="@style/Text_view_Style"
                        android:text="@string/project_name_edittext" />

                    <EditText
                        android:id="@+id/list_project_name_edittext"
                        style="@style/EditText_Style"
                        android:hint="@string/input_project_name"/>
                </LinearLayout>

                <!-- 姓名-->
                <LinearLayout
                    style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/project_customer_name" />

                    <EditText
                        android:id="@+id/list_customer_name_EditText"
                        style="@style/EditText_Style"
                        android:hint="@string/input_project_customer_name"/>

                </LinearLayout>

                <!-- 性别-->
                <LinearLayout
                    style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/sex" />

                    <Spinner
                        android:id="@+id/list_customer_sex_sprinner"
                        style="@style/Spinner_Style">

                    </Spinner>
                </LinearLayout>

                <!-- 手机-->
                <LinearLayout
                    style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/phone" />

                    <EditText
                        android:id="@+id/list_customer_phone_editText"
                        style="@style/EditText_Style"
                        android:inputType="phone"
                        android:hint="@string/input_phone"/>
                </LinearLayout>

                <!-- QQ-->
                <LinearLayout
                    style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/qq" />

                    <EditText
                        android:id="@+id/list_cutomer_qq_editText"
                        style="@style/EditText_Style"
                        android:inputType="number"
                        android:hint="@string/input_qq"/>
                </LinearLayout>

                <!-- 微信-->
                <LinearLayout
                    style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/wechat" />

                    <EditText
                        android:id="@+id/list_customer_wechat_editText"
                        style="@style/EditText_Style"
                        android:inputType="number"
                        android:hint="@string/input_wechat"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/project_list_check_button"
        style="@style/SearchButton" />

</LinearLayout>
