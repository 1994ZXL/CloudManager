<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_my_leave"
    style="@style/CardView_LayoutStyle">

    <LinearLayout style="@style/linearLayoutStyle">

        <!-- 第一排-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <TextView
                android:id="@+id/leave_card_item_name"
                style="@style/Text_view_Style"
                android:layout_weight="1"
                android:width="200dp"
                android:maxLength="6" />

            <TextView
                android:id="@+id/leave_card_item_illness"
                style="@style/Text_view_Style"
                android:layout_weight="1"
                android:width="200dp"
                android:gravity="left"
                android:maxLength="6" />

            <TextView
                android:id="@+id/leave_card_item_state"
                style="@style/Text_view_Style"
                android:layout_weight="1"
                android:width="200dp"
                android:gravity="left"
                android:maxLength="6"
                android:textColor="#FF4040" />
        </LinearLayout>
        <!-- 第二排-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <TextView
                style="@style/Text_view_Style"
                android:text="@string/leave_begin_time" />

            <TextView
                android:id="@+id/leave_card_item_begin_time"
                style="@style/Text_view_Style" />
        </LinearLayout>

        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <TextView
                style="@style/Text_view_Style"
                android:text="@string/leave_end_time" />

            <TextView
                android:id="@+id/leave_card_item_end_time"
                style="@style/Text_view_Style" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>