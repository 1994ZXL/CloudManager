<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Parent_LayoutStyle"
    tools:context=".contact.projectManagerContact.ContactSearchFragment">

    <ScrollView style="@style/ScrollView_Style">

        <LinearLayout style="@style/linearLayoutStyle">

            <LinearLayout style="@style/Toptitle_LayoutStyle">

                <TextView
                    style="@style/toptextview_left"
                    android:text="@string/text_return"
                    android:id="@+id/pm_manage_member_detail_back"/>

                <TextView
                    style="@style/toptextview_center"
                    android:text="@string/manage_member"
                    android:id="@+id/pm_manage_member_detail_title"/>

                <TextView
                    style="@style/topview_right"
                    android:text="@string/search"
                    android:id="@+id/pm_manage_member_detail_search"/>

            </LinearLayout>

            <LinearLayout style="@style/linearLayoutStyle">

                <LinearLayout style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/mem_name" />

                    <EditText
                        android:id="@+id/pm_manage_member_detail_mem_name"
                        style="@style/EditText_Style"/>

                    <Spinner
                        style="@style/Spinner_Style"
                        android:id="@+id/pm_manage_member_detail_mem_name_spinner">
                    </Spinner>
                </LinearLayout>

                <!-- 姓名-->
                <LinearLayout style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/project_name_edittext" />

                    <EditText
                        android:id="@+id/pm_manage_member_detail_project_name"
                        style="@style/EditText_Style" />

                    <Spinner
                        style="@style/Spinner_Style"
                        android:id="@+id/pm_manage_member_detail_project_name_spinner">

                    </Spinner>
                </LinearLayout>

                <!-- 性别-->
                <LinearLayout style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/member_res" />

                    <EditText
                        android:id="@+id/pm_manage_member_detail_member_res"
                        style="@style/EditText_Style">
                    </EditText>
                </LinearLayout>

                <!-- 项目名称-->
                <LinearLayout style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/role" />

                    <EditText
                        android:id="@+id/pm_manage_member_detail_role"
                        style="@style/EditText_Style"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/pm_manage_member_detail_save"
        style="@style/SearchButton"
        android:text="@string/save" />

</LinearLayout>
