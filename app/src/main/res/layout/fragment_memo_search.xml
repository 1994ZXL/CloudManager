<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/linearLayoutStyle"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/memo_title_textview"
                        android:layout_weight="1"
                        android:textSize="20dp"/>
                    <EditText
                        android:id="@+id/my_memo_title_edittext"
                        style="@style/editTextZ"
                        android:layout_weight="4"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/submit_time"
                        android:layout_weight="1"
                        android:textSize="20dp"/>

                    <Button
                        android:id="@+id/memo_submit_begin_time_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="20dp"
                        android:text="@string/project_begin_time_textview"
                        android:layout_weight="0.4"/>
                    <Button
                        android:id="@+id/memo_submit_end_time_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="20dp"
                        android:text="@string/project_end_time_textview"
                        android:layout_weight="0.4"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/my_memo_search_button"
                style="@style/SearchButton"
                android:text="@string/check_button" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
