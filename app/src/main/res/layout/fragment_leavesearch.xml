<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/linearLayoutStyle"
                android:padding="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/leave_search_nameLinearLayout">

                    <TextView
                        android:layout_width="200sp"
                        android:layout_height="35sp"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:text="@string/name"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:background="#87CEEB"
                        android:layout_weight="1"
                        style="@style/editText"
                        android:id="@+id/my_leave_name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20sp">

                    <TextView
                        android:layout_width="50sp"
                        android:layout_height="35sp"
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:text="@string/leave_time"/>

                    <Button
                        android:layout_width="80sp"
                        android:layout_height="35sp"
                        android:textColor="#000000"
                        android:background="#87CEEB"
                        android:layout_weight="1"
                        android:id="@+id/my_leave_begin_time_button"
                        android:text="@string/project_begin_time_textview" />

                    <TextView
                        android:layout_width="10sp"
                        android:layout_height="35sp"
                        android:text=" "/>

                    <Button
                        android:layout_width="80sp"
                        android:layout_height="35sp"
                        android:textColor="#000000"
                        android:background="#87CEEB"
                        android:layout_weight="1"
                        android:id="@+id/my_leave_end_time_button"
                        android:text="@string/project_end_time_textview" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20sp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/my_leave_kind"/>

                    <Spinner
                        android:layout_width="200sp"
                        android:layout_height="35sp"
                        android:background="#87CEEB"
                        android:gravity="center"
                        android:paddingLeft="20sp"
                        android:layout_weight="1"
                        android:id="@+id/my_leave_kind_sprinner"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20sp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/my_leave_sate" />

                    <Spinner
                        android:layout_width="200sp"
                        android:layout_height="35sp"
                        android:background="#87CEEB"
                        android:gravity="center"
                        android:paddingLeft="20sp"
                        android:layout_weight="1"
                        android:id="@+id/my_leave_state_sprinner" />
                </LinearLayout>
            </LinearLayout>

            <Button
                style="@style/SearchButton"
                android:layout_gravity="center_horizontal"
                android:background="#87CEFA"
                android:id="@+id/my_leave_search_button"
                android:text="@string/check_button"/>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
