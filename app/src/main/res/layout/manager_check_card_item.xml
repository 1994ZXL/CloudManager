<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_manager_check"
    style="@style/CardView_LayoutStyle">

    <LinearLayout style="@style/linearLayoutStyle">

        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <TextView
                android:id="@+id/manager_check_card_item_name"
                style="@style/Text_view_Style"
                android:layout_weight="1"
                android:width="200dp"
                android:text="@string/name" />

            <TextView
                android:id="@+id/manager_check_card_item_state"
                style="@style/Text_view_Style"
                android:layout_weight="1"
                android:width="200dp" />

        </LinearLayout>

        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <LinearLayout style="@style/CardView_line_LayoutStyle">

                <TextView
                    style="@style/Text_view_Style"
                    android:text="@string/check_location" />

                <TextView
                    android:id="@+id/manager_check_card_item_check_location"
                    style="@style/Text_view_Style" />
            </LinearLayout>

            <LinearLayout style="@style/CardView_line_LayoutStyle">

                <TextView
                    style="@style/Text_view_Style"
                    android:text="@string/puncher_master" />

                <TextView
                    android:id="@+id/manager_check_card_item_check_manager"
                    style="@style/Text_view_Style" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>