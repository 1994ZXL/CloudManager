<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Parent_LayoutStyle"
    tools:context=".check.myCheck.SearchCheckFragment">

    <ScrollView style="@style/ScrollView_Style">

        <LinearLayout style="@style/linearLayoutStyle">

            <LinearLayout style="@style/Toptitle_LayoutStyle">

                <TextView
                    style="@style/toptextview_left"
                    android:text="@string/text_return"
                    android:id="@+id/main_fragment_manager_check_query_back"/>

                <TextView
                    style="@style/toptextview_center"
                    android:text="@string/check_query" />

                <TextView
                    style="@style/topview_right"
                    android:text="@string/text_clean"
                    android:id="@+id/main_fragment_manager_check_query_clean"/>

            </LinearLayout>

            <LinearLayout style="@style/Viewline_LayoutStyle">

                <TextView
                    style="@style/Text_view_Style"
                    android:text="@string/name" />

                <EditText
                    android:id="@+id/manager_check_name_edittext"
                    style="@style/EditText_Style"
                    android:hint="@string/input_name" />

            </LinearLayout>

            <LinearLayout style="@style/Viewline_LayoutStyle">

                <TextView
                    android:id="@+id/check_begin_time_textview"
                    style="@style/Text_view_Style"
                    android:text="@string/check_date" />

                <TextView
                    android:id="@+id/check_begin_time_button"
                    style="@style/Text_view_Style"
                    android:text="@string/project_begin_time_textview" />

                <TextView
                    style="@style/Text_Style"
                    android:text="@string/text" />

                <TextView
                    android:id="@+id/check_end_time_button"
                    style="@style/Text_view_Style"
                    android:text="@string/project_end_time_textview" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/main_fragment_manager_check_query_button"
        style="@style/SearchButton" />

</LinearLayout>

