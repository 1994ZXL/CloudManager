<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_my_overtime"
    style="@style/CardView_LayoutStyle">

    <LinearLayout style="@style/linearLayoutStyle">

        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <!-- 姓名-->
            <TextView
                android:id="@+id/overtime_card_item_name"
                style="@style/Text_view_Style"
                android:layout_width="200dp"
                android:gravity="left" />

            <!--项目名-->
            <TextView
                android:id="@+id/main_fragment_overtime_project"
                style="@style/Text_view_Style"
                android:layout_width="180dp"
                android:gravity="left" />

        </LinearLayout>

        <!-- 开始加班时间-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <TextView
                style="@style/Text_view_Style"
                android:text="@string/my_overtime_time" />

            <TextView
                android:id="@+id/overtime_card_item_begin_time"
                style="@style/Text_view_Style" />

            <TextView
                android:text="@string/text"
                style="@style/Text_view_Style" />

            <TextView
                android:id="@+id/overtime_card_item_end_time"
                style="@style/Text_view_Style" />
        </LinearLayout>
        <!-- 结束加班时间-->

        <!-- 加班原因-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <TextView
                style="@style/Text_view_Style"
                android:text="@string/manager_overtime_reason" />

            <TextView
                android:id="@+id/overtime_card_item_overtime_reason"
                style="@style/Text_view_Style"
                android:maxLength="12" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>