<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bug_details"
    style="@style/Parent_LayoutStyle">

    <ScrollView
        style="@style/ScrollView_Style">

        <LinearLayout
            style="@style/linearLayoutStyle">

            <LinearLayout
                style="@style/Toptitle_LayoutStyle">

                <TextView
                    style="@style/toptextview_left"
                    android:text="@string/text_return"
                    android:id="@+id/my_bug_details_back"/>

                <TextView
                    style="@style/toptextview_center"
                    android:text="@string/my_bug_detail"/>

                <TextView
                    style="@style/topview_right"
                    android:text="@string/edit"
                    android:id="@+id/bug_details_edit" />

            </LinearLayout>

            <!-- 第一块-->
            <LinearLayout
                style="@style/linearLayoutStyle">

                <!-- 项目名称-->
                <LinearLayout
                    style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/project_name_edittext"/>

                    <TextView
                        style="@style/Text_view_Style"
                        android:id="@+id/bug_details_projectName"/>

                </LinearLayout>

                <!-- bug等级-->
                <LinearLayout
                    style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/bug_level" />

                    <TextView
                        style="@style/Text_view_Style"
                        android:id="@+id/bug_details_level"/>

                </LinearLayout>

                <!-- bug状态-->
                <LinearLayout
                    style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/bug_state" />

                    <TextView
                        style="@style/Text_view_Style"
                        android:id="@+id/bug_details_state"/>

                </LinearLayout>

                <!-- bug内容-->
                <LinearLayout
                    style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/bug_content" />

                    <EditText
                        style="@style/EditText_Style"
                        android:hint="@string/input_bug_content"
                        android:id="@+id/bug_details_content"/>

                </LinearLayout>

            </LinearLayout>

            <!-- 第二块-->
            <LinearLayout
                style="@style/linearLayoutStyle">

                <!-- 发现时间-->
                <LinearLayout
                    style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/found_time"/>

                    <TextView
                        style="@style/Text_view_Style"
                        android:id="@+id/bug_details_found_time"/>

                </LinearLayout>

                <!-- 发现人-->
                <LinearLayout
                    style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/found_man"/>

                    <TextView
                        style="@style/Text_view_Style"
                        android:id="@+id/bug_details_found_man"/>

                </LinearLayout>

                <!-- 修改时间-->
                <LinearLayout
                    style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/edit_time"/>

                    <TextView
                        style="@style/Text_view_Style"
                        android:id="@+id/bug_details_edit_time"/>

                </LinearLayout>

                <!-- 修改人-->
                <LinearLayout
                    style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/edit_man"/>

                    <TextView
                        style="@style/Text_view_Style"
                        android:id="@+id/bug_details_edit_man"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>