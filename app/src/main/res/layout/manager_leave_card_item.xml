<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_manager_leave"
    style="@style/CardView_LayoutStyle">

    <LinearLayout style="@style/linearLayoutStyle">

        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <TextView
                android:id="@+id/manager_leave_card_item_name"
                style="@style/Text_view_Style"
                android:layout_width="150dp"
                android:gravity="left"
                android:text="@string/name" />

            <TextView
                android:id="@+id/manager_leave_card_item_leave_leave_type"
                style="@style/Text_view_Style"
                android:layout_width="130dp"
                android:gravity="left" />

            <TextView
                android:id="@+id/manager_leave_card_item_state"
                style="@style/Text_view_Style"
                android:layout_width="100dp"
                android:gravity="left"
                android:text="已批准"
                android:textColor="#FF4040" />
        </LinearLayout>

        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <TextView
                style="@style/Text_view_Style"
                android:text="@string/leave_begin_time" />

            <TextView
                android:id="@+id/manager_leave_card_item_leave_begin_time"
                style="@style/Text_view_Style" />
        </LinearLayout>

        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <TextView
                style="@style/Text_view_Style"
                android:text="@string/leave_end_time" />

            <TextView
                android:id="@+id/manager_leave_card_item_leave_end_time"
                style="@style/Text_view_Style" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>