<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".myMission.MyMissionSearchFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                style="@style/linearLayoutStyle"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_mission_state"
                        android:textSize="20dp"
                        android:layout_weight="1"/>

                    <EditText
                        style="@style/editTextZ"
                        android:id="@+id/my_mission_name_edittext"
                        android:layout_weight="7"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_mission_time"
                        android:layout_weight="2"
                        android:textSize="20dp"/>

                    <Button
                        android:id="@+id/my_mission_begin_time_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/project_begin_time_textview"
                        android:layout_weight="0.2"/>
                    <Button
                        android:id="@+id/my_mission_end_time_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/project_end_time_textview"
                        android:layout_weight="0.2"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_mission_state"
                        android:textSize="20dp"
                        android:layout_gravity="center_vertical" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55dp"
                        android:id="@+id/my_mission_state_sprinner"
                        android:layout_weight="1"/>
                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/my_mission_search_button"
                style="@style/SearchButton"
                android:text="@string/check_button"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
