<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_my_leave"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="@color/memo_background"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <!-- 第一排-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/font"
                android:layout_width="wrap_content"
                android:id="@+id/cm_leave_card_item_name"
                android:text="@string/name"/>
            <TextView
                style="@style/font"
                android:layout_width="wrap_content"
                android:layout_marginLeft="50dp"
                android:id="@+id/cm_leave_card_item_type" />
        </LinearLayout>
        <!-- 第二排-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
            <TextView
                style="@style/font"
                android:layout_width="wrap_content"
                android:text="@string/leave_begin_time" />
            <TextView
                style="@style/font"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:id="@+id/cm_leave_card_item_begin_time" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
            <TextView
                style="@style/font"
                android:layout_width="wrap_content"
                android:text="@string/leave_end_time" />
            <TextView
                style="@style/font"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:id="@+id/cm_leave_card_item_end_time" />
        </LinearLayout>
        <!-- 第三排-->
        <TextView
            style="@style/font"
            android:layout_width="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#FF4040"
            android:id="@+id/cm_leave_card_item_state" />
    </LinearLayout>
</android.support.v7.widget.CardView>