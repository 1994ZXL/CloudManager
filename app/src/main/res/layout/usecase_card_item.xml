<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_my_usecase"
    style="@style/CardView_LayoutStyle">

    <LinearLayout style="@style/linearLayoutStyle">

        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <LinearLayout
                style="@style/CardView_line_LayoutStyle"
                android:layout_width="120dp">

                <TextView
                    android:id="@+id/usecase_card_item_project_soft"
                    style="@style/Text_view_Style"
                    android:maxLength="8" />
            </LinearLayout>

            <LinearLayout style="@style/CardView_line_LayoutStyle">

                <TextView
                    style="@style/Text_view_Style"
                    android:text="@string/functionModule" />

                <TextView
                    android:id="@+id/usecase_card_item_usecase_number"
                    style="@style/Text_view_Style"
                    android:maxLength="8" />
            </LinearLayout>
        </LinearLayout>

        <!-- 测试人员-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <LinearLayout
                style="@style/CardView_line_LayoutStyle"
                android:layout_width="120dp">

                <TextView
                    style="@style/Text_view_Style"
                    android:text="@string/exploit_man" />

                <TextView
                    android:id="@+id/usecase_card_item_exploit_man"
                    style="@style/Text_view_Style"
                    android:maxLength="3" />
            </LinearLayout>

            <LinearLayout style="@style/CardView_line_LayoutStyle">

                <TextView
                    style="@style/Text_view_Style"
                    android:text="@string/text_man" />

                <TextView
                    android:id="@+id/usecase_card_item_text_man"
                    style="@style/Text_view_Style"
                    android:maxLength="8" />
            </LinearLayout>
        </LinearLayout>

        <!-- 项目主管-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <LinearLayout
                style="@style/CardView_line_LayoutStyle"
                android:layout_width="120dp">

                <TextView
                    style="@style/Text_view_Style"
                    android:text="@string/project_manager_edittext" />

                <TextView
                    android:id="@+id/usecase_card_item_version_number"
                    style="@style/Text_view_Style"
                    android:maxLength="3" />
            </LinearLayout>

            <LinearLayout style="@style/CardView_line_LayoutStyle">

                <TextView
                    style="@style/Text_view_Style"
                    android:text="@string/autorized_time" />

                <TextView
                    android:id="@+id/usecase_card_item_autorized_time"
                    style="@style/Text_view_Style" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>