<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pm_schedule_card_item"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="@color/memo_background"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <!--任务名/进度-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pm_schedule_card_item_title"
                android:textSize="30dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    style="@style/font"
                    android:text="@string/schedule"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textSize="20dp"
                    android:textColor="#FF0000"
                    android:id="@+id/pm_schedule_card_item_percent"/>

            </LinearLayout>

        </LinearLayout>

        <!--生成时间-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                style="@style/font"
                android:text="@string/pmsch_time"
                android:layout_width="match_parent"
                android:layout_weight="2.5"/>

            <TextView
                style="@style/font"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:id="@+id/pm_schedule_card_item_pmsch_time"/>
        </LinearLayout>

        <!--提交时间-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                style="@style/font"
                android:text="@string/submit_time"
                android:layout_width="match_parent"
                android:layout_weight="2.5"/>

            <TextView
                style="@style/font"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/pm_schedule_card_item_submit_time"
                android:layout_marginLeft="16dp" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>