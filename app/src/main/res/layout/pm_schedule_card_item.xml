<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pm_schedule_card_item"
    style="@style/CardView_LayoutStyle">

    <LinearLayout style="@style/linearLayoutStyle">

        <!--任务名/进度-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <LinearLayout style="@style/CardView_line_LayoutStyle">

                <TextView
                    android:id="@+id/pm_schedule_card_item_title"
                    style="@style/Text_view_Style" />
            </LinearLayout>

            <LinearLayout style="@style/CardView_line_LayoutStyle">

                <TextView
                    style="@style/Text_view_Style"
                    android:text="@string/schedule" />

                <TextView
                    android:id="@+id/pm_schedule_card_item_percent"
                    style="@style/Text_view_Style" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/pm_schedule_card_item_delete"
                style="@style/Text_view_Style"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/memo_background"
                android:src="@android:drawable/ic_menu_delete" />
        </LinearLayout>

        <!--生成时间-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <TextView
                style="@style/Text_view_Style"
                android:text="@string/pmsch_time" />

            <TextView
                android:id="@+id/pm_schedule_card_item_pmsch_time"
                style="@style/Text_view_Style" />
        </LinearLayout>

        <!--提交时间-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <TextView
                style="@style/Text_view_Style"
                android:text="@string/submit_time" />

            <TextView
                android:id="@+id/pm_schedule_card_item_submit_time"
                style="@style/Text_view_Style" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>