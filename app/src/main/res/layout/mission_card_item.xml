<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_my_mission"
    style="@style/CardView_LayoutStyle">

    <LinearLayout style="@style/linearLayoutStyle">

        <!-- 第一排-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <TextView
                android:id="@+id/mission_card_item_title"
                style="@style/Text_view_Style"
                android:layout_weight="1"
                android:width="350dp" />

            <TextView
                android:id="@+id/mission_card_item_state"
                style="@style/Text_view_Style"
                android:layout_weight="1"
                android:width="200dp"
                android:gravity="left" />

        </LinearLayout>

        <!-- 开始时间-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <LinearLayout
                style="@style/CardView_line_LayoutStyle"
                android:layout_width="450dp">

                <TextView
                    style="@style/Text_view_Style"
                    android:text="@string/mission_begin_time" />

                <TextView
                    android:id="@+id/missoin_card_item_mission_begin_time"
                    style="@style/Text_view_Style" />
            </LinearLayout>

            <LinearLayout style="@style/CardView_line_LayoutStyle">

                <ImageButton
                    android:id="@+id/mission_card_item_delete"
                    style="@style/Text_view_Style"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/memo_background"
                    android:src="@android:drawable/ic_menu_delete" />
            </LinearLayout>
        </LinearLayout>
        <!-- 完成时间-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <TextView
                style="@style/Text_view_Style"
                android:text="@string/mission_end_time" />

            <TextView
                android:id="@+id/mission_card_item_mission_end_time"
                style="@style/Text_view_Style" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>