<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Parent_LayoutStyle"
    tools:context=".mission.projectManagerMission.MissionSearchFragment">

    <LinearLayout style="@style/Toptitle_LayoutStyle">

        <TextView
            android:id="@+id/pm_mission_search_back"
            style="@style/toptextview_left"
            android:text="@string/text_return" />

        <TextView
            style="@style/toptextview_center"
            android:text="@string/mission_choose" />

        <TextView
            style="@style/topview_right"
            android:text="" />

    </LinearLayout>

    <ScrollView style="@style/ScrollView_Style">

        <LinearLayout style="@style/linearLayoutStyle">

            <LinearLayout style="@style/linearLayoutStyle">

                <LinearLayout style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/name" />

                    <EditText
                        android:id="@+id/pm_mission_memName"
                        style="@style/EditText_Style"
                        android:hint="@string/input_name" />

                </LinearLayout>

                <LinearLayout style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/mission_name" />

                    <EditText
                        android:id="@+id/pm_mission_projectName"
                        style="@style/EditText_Style"
                        android:hint="@string/input_mission_name">

                    </EditText>
                </LinearLayout>

                <LinearLayout style="@style/Viewline_LayoutStyle">

                    <TextView
                        android:id="@+id/project_mission_state_textview"
                        style="@style/Text_view_Style"
                        android:text="@string/project_mission_state" />

                    <Spinner
                        android:id="@+id/pm_mission_state"
                        style="@style/Spinner_Style">

                    </Spinner>
                </LinearLayout>

                <LinearLayout style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/project_begin_time_textview" />

                    <TextView
                        android:id="@+id/pm_mission_begin_time_button"
                        style="@style/Text_view_Style"
                        android:text="@string/project_begin_time_textview" />

                    <TextView
                        style="@style/Text_Style"
                        android:text="@string/text" />

                    <TextView
                        android:id="@+id/pm_mission_end_time_button"
                        style="@style/Text_view_Style"
                        android:text="@string/project_end_time_textview" />

                </LinearLayout>

                <LinearLayout style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/project_end_time_textview" />

                    <TextView
                        android:id="@+id/pm_mission_end_time_begin_button"
                        style="@style/Text_view_Style"
                        android:text="@string/project_begin_time_textview" />

                    <TextView
                        style="@style/Text_Style"
                        android:text="@string/text" />

                    <TextView
                        android:id="@+id/pm_mission_end_time_end_button"
                        style="@style/Text_view_Style"
                        android:text="@string/project_end_time_textview" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/pm_mission_search_button"
        style="@style/SearchButton" />

</LinearLayout>
