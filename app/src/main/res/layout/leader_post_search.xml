<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/linearLayoutStyle"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/employer_name"
                        android:layout_weight="1"
                        android:textSize="20dp"/>

                    <EditText
                        android:id="@+id/leader_search_name_edittext"
                        style="@style/editTextZ"
                        android:layout_weight="8"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_post_post_time_hit"
                        android:layout_weight="1"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/leader_post_post_begin_time_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/project_begin_time_textview"
                        android:layout_weight="0.3"/>
                    <TextView
                        android:id="@+id/leader_post_post_end_time_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/project_end_time_textview"
                        android:layout_weight="0.3"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/my_post_content"
                        android:layout_weight="5"
                        android:textSize="20dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_weight="3"
                        android:background="@color/content"
                        >
                        <EditText
                            android:id="@+id/leader_post_content_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/leader_post_search_button"
                style="@style/SearchButton"
                android:text="@string/check_button" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
