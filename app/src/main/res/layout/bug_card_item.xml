<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_my_bug"
    style="@style/CardView_LayoutStyle">

    <LinearLayout style="@style/linearLayoutStyle">

        <!-- 项目名称-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <TextView
                android:id="@+id/main_fragment_my_bug_projectName"
                style="@style/Text_view_Style"
                android:text="@string/project_name_edittext"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- bug等级-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <TextView
                style="@style/Text_view_Style"
                android:text="@string/bug_version" />

            <TextView
                android:id="@+id/bug_card_item_bug_version"
                style="@style/Text_view_Style"
                android:layout_width="80dp" />

            <TextView
                style="@style/Text_view_Style"
                android:text="@string/found_time" />

            <TextView
                android:id="@+id/bug_card_item_found_time"
                style="@style/Text_view_Style" />
        </LinearLayout>

        <!-- bug状态-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <TextView
                style="@style/Text_view_Style"
                android:text="@string/my_bug_state" />

            <TextView
                android:id="@+id/bug_card_item_bug_state"
                style="@style/Text_view_Style"
                android:layout_width="80dp" />

            <TextView
                style="@style/Text_view_Style"
                android:text="@string/edit_time" />

            <TextView
                android:id="@+id/bug_card_item_edit_time"
                style="@style/Text_view_Style" />
        </LinearLayout>

        <!-- 发现时间-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

        </LinearLayout>

        <!-- 修改时间-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>