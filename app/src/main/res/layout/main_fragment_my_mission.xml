<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/Toptitle_LayoutStyle">

            <TextView
                style="@style/toptextview_left"
                android:text="@string/text_return"
                android:id="@+id/my_mission_back"/>

            <TextView
                style="@style/toptextview_center"
                android:text="@string/my_mission"
                android:id="@+id/my_mission_title"/>

            <TextView
                style="@style/topview_right"
                android:id="@+id/manager_mission_search"
                android:text="@string/search"/>

        </LinearLayout>

        <com.example.zxl.cloudmanager.pulltorefresh.PullToRefreshLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/my_mission_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <include layout="@layout/refresh_head" />
            <!-- 支持所有实现Pullable接口的View -->

            <com.example.zxl.cloudmanager.pulltorefresh.pullableview.PullableScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/mission_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:dividerHeight="10dp" />

                </RelativeLayout>

            </com.example.zxl.cloudmanager.pulltorefresh.pullableview.PullableScrollView>

            <include layout="@layout/load_more" />

        </com.example.zxl.cloudmanager.pulltorefresh.PullToRefreshLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/manager_mission_add"
        style="@style/SearchButton"
        android:text="@string/add"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
