<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Parent_LayoutStyle">

    <LinearLayout style="@style/Toptitle_LayoutStyle">

        <TextView
            android:id="@+id/my_overtime_details_back"
            style="@style/toptextview_left"
            android:text="@string/text_return" />

        <TextView
            style="@style/toptextview_center"
            android:text="@string/my_overtime_detail" />

        <TextView
            style="@style/topview_right"
            android:text="" />

    </LinearLayout>

    <ScrollView style="@style/ScrollView_Style">

        <LinearLayout style="@style/linearLayoutStyle">

            <!-- 第一块-->
            <LinearLayout style="@style/linearLayoutStyle">

                <!-- 姓名-->
                <LinearLayout style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/name" />

                    <TextView
                        android:id="@+id/manager_overtime_name"
                        style="@style/Text_view_Style" />
                </LinearLayout>

                <!--加班项目-->
                <LinearLayout style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/overtime_project" />

                    <TextView
                        android:id="@+id/manager_overtime_project"
                        style="@style/Text_view_Style" />
                </LinearLayout>

                <!--加班原因-->
                <LinearLayout style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/manager_overtime_reason" />

                    <TextView
                        android:id="@+id/manager_overtime_reason_textview"
                        style="@style/Text_view_Style" />

                </LinearLayout>

                <!--加班状态-->
                <LinearLayout style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/overtime_status" />

                    <TextView
                        android:id="@+id/manager_overtime_status"
                        style="@style/Text_view_Style" />

                </LinearLayout>

            </LinearLayout>

            <!-- 第二块-->
            <LinearLayout style="@style/linearLayoutStyle">

                <!--加班时间-->
                <LinearLayout style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/overtime_begin_time" />

                    <TextView
                        android:id="@+id/manager_overtime_begin_time_textview"
                        style="@style/Text_view_Style" />
                </LinearLayout>

                <LinearLayout style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/overtime_end_time" />

                    <TextView
                        android:id="@+id/manager_overtime_end_time_textview"
                        style="@style/Text_view_Style" />
                </LinearLayout>

                <!--加班时间小计-->
                <LinearLayout style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/manager_overtime_total" />

                    <TextView
                        android:id="@+id/manager_overtime_this_time_textview"
                        style="@style/Text_view_Style" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
