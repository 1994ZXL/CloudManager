<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout style="@style/Toptitle_LayoutStyle">

            <TextView
                style="@style/toptextview_left"
                android:text="@string/text_return"
                android:id="@+id/my_bug_back"/>

            <TextView
                style="@style/toptextview_center"
                android:text="@string/my_bug"/>

            <TextView
                style="@style/topview_right"
                android:text="@string/search"
                android:id="@+id/my_bug_search"/>

        </LinearLayout>

        <com.example.zxl.cloudmanager.Refresh.PullToRefreshView
            android:id="@+id/my_bug_pull_to_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/bug_recyclerview"
                android:dividerHeight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"/>
        </com.example.zxl.cloudmanager.Refresh.PullToRefreshView>

    </LinearLayout>

    <Button
        android:id="@+id/my_bug_add"
        style="@style/SearchButton"
        android:text="@string/add"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>