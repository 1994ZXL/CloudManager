<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pm_manager_item"
    style="@style/CardView_LayoutStyle">

    <LinearLayout style="@style/linearLayoutStyle">

        <!-- 第一排-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <LinearLayout
                style="@style/CardView_line_LayoutStyle"
                android:layout_width="170dp">

                <!-- 项目名称-->
                <TextView
                    android:id="@+id/pm_item_name"
                    style="@style/Text_view_Style"
                    android:maxLength="9" />
            </LinearLayout>

            <LinearLayout style="@style/CardView_line_LayoutStyle">

                <!--状态-->
                <TextView
                    android:id="@+id/pm_item_state"
                    style="@style/Text_view_Style"
                    android:maxLength="10" />

            </LinearLayout>

        </LinearLayout>

        <!-- 甲方单位名称-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <LinearLayout
                style="@style/CardView_line_LayoutStyle"
                android:layout_width="420dp">

                <TextView
                    style="@style/Text_view_Style"
                    android:text="@string/pm_customer_company_name" />

                <TextView
                    android:id="@+id/pm_item_company"
                    style="@style/Text_view_Style"
                    android:maxLength="10" />
            </LinearLayout>

            <LinearLayout style="@style/CardView_line_LayoutStyle">

                <ImageButton
                    android:id="@+id/pm_item_delete"
                    style="@style/Text_view_Style"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/memo_background"
                    android:src="@android:drawable/ic_menu_delete" />
            </LinearLayout>
        </LinearLayout>

        <!-- 技术负责人-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <LinearLayout
                style="@style/CardView_line_LayoutStyle"
                android:layout_width="170dp">

                <TextView
                    style="@style/Text_view_Style"
                    android:text="@string/project_customer_name" />

                <TextView
                    android:id="@+id/pm_item_contactor"
                    style="@style/Text_view_Style"
                    android:maxLength="3" />
            </LinearLayout>

            <LinearLayout style="@style/CardView_line_LayoutStyle">

                <TextView
                    style="@style/Text_view_Style"
                    android:text="@string/operation_man" />

                <TextView
                    android:id="@+id/pm_item_manager"
                    style="@style/Text_view_Style"
                    android:maxLength="3" />
            </LinearLayout>
        </LinearLayout>

        <!-- 甲方负责人-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>