<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_post_card_item"
    style="@style/CardView_LayoutStyle">

    <LinearLayout style="@style/linearLayoutStyle">

        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">
            <!--姓名-->
            <TextView
                android:id="@+id/leader_post_list_name"
                style="@style/Text_view_Style"
                android:layout_width="110dp"
                android:gravity="left" />

            <!--日期-->
            <TextView
                android:id="@+id/leader_post_list_data"
                style="@style/Text_view_Style"
                android:layout_width="150dp"
                android:gravity="left" />

            <!--提交状态-->
            <TextView
                android:id="@+id/leader_post_list_status"
                style="@style/Text_view_Style"
                android:layout_width="120dp"
                android:gravity="left" />

        </LinearLayout>

        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <TextView
                style="@style/Text_view_Style"
                android:text="@string/my_post_content" />

            <!--内容-->
            <TextView
                android:id="@+id/leader_post_list_content"
                style="@style/Text_view_Style"
                android:maxLength="10" />
        </LinearLayout>

        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <TextView
                style="@style/Text_view_Style"
                android:text="@string/post_opinion" />

            <!--评价-->
            <TextView
                android:id="@+id/leader_post_list_opinion"
                style="@style/Text_view_Style"
                android:maxLength="10" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>