<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".Memo.MemoDetailFragment"
    android:orientation="vertical">

    <EditText
        android:id="@+id/memo_detail_title_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/memo_title_textview"
        android:gravity="center"
        android:textSize="25dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/memo_detail_date_button"
        android:background="#F1FFFF"
        android:layout_gravity="center" />
    <EditText
        android:id="@+id/memo_detail_content_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/memo_content_textview"/>

</LinearLayout>
