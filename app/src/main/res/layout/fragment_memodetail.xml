<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/post_details"
    style="@style/Parent_LayoutStyle">

    <LinearLayout style="@style/Toptitle_LayoutStyle">

        <TextView
            android:id="@+id/memo_details_back"
            style="@style/toptextview_left"
            android:text="@string/text_return" />

        <TextView
            style="@style/toptextview_center"
            android:text="@string/my_memo" />

        <TextView
            android:id="@+id/memo_details_save"
            style="@style/topview_right"
            android:text="修改" />

    </LinearLayout>

    <ScrollView style="@style/ScrollView_Style">

        <LinearLayout style="@style/linearLayoutStyle">

            <!-- 第一块-->
            <LinearLayout style="@style/linearLayoutStyle">

                <!-- 标题-->
                <LinearLayout style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/memo_title" />

                    <EditText
                        android:id="@+id/memo_details_title"
                        style="@style/EditText_Style"
                        android:hint="@string/input_memo_title" />

                </LinearLayout>

                <!-- 创建时间-->
                <LinearLayout style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/plan_create_time" />

                    <TextView
                        android:id="@+id/memo_details_create_time"
                        style="@style/Text_view_Style" />

                </LinearLayout>

                <!-- 内容-->
                <LinearLayout style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/memo_content" />

                    <EditText
                        android:id="@+id/memo_details_content"
                        style="@style/EditText_Style"
                        android:hint="@string/memo_content_textview" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>