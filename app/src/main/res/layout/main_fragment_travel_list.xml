<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/travel_card_item"
    style="@style/CardView_LayoutStyle">

    <LinearLayout style="@style/linearLayoutStyle">

        <!--第一排-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <LinearLayout style="@style/CardView_line_LayoutStyle">

                <!--姓名-->
                <TextView
                    android:id="@+id/my_travel_name"
                    style="@style/Text_view_Style" />
            </LinearLayout>

            <LinearLayout style="@style/CardView_line_LayoutStyle">

                <TextView
                    style="@style/Text_view_Style"
                    android:text="@string/trip_status" />

                <!--状态-->
                <TextView
                    android:id="@+id/my_travel_status"
                    style="@style/Text_view_Style"
                    android:gravity="left" />
            </LinearLayout>

        </LinearLayout>

        <!--第二排-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <TextView
                style="@style/Text_view_Style"
                android:text="@string/employer_travel_reason" />

            <!--内容-->
            <TextView
                android:id="@+id/my_travel_reason"
                style="@style/Text_view_Style"
                android:maxLength="10" />
        </LinearLayout>

        <!--第三排-->
        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <TextView
                style="@style/Text_view_Style"
                android:text="@string/start_stop_time" />

            <TextView
                android:id="@+id/my_travel_beginTime"
                style="@style/Text_view_Style" />

            <TextView
                style="@style/Text_view_Style"
                android:text="@string/text" />

            <TextView
                android:id="@+id/my_travel_endTime"
                style="@style/Text_view_Style" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>