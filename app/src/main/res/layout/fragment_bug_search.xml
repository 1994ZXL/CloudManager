<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.zxl.cloudmanager.publicSearch.bug.BugSearchFragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <LinearLayout
               style="@style/linearLayoutStyle"
               >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="20dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/project_name_edittext"
                       android:layout_weight="1"
                       android:textSize="20dp"/>

                   <EditText
                       android:id="@+id/bug_project_name_edittext"
                       style="@style/editTextZ"
                       android:layout_weight="6"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="20dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/bug_find_time"
                       android:layout_weight="2"
                       android:textSize="20dp"/>

                   <Button
                       android:id="@+id/bug_begin_time_button"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingRight="20dp"
                       android:text="@string/project_begin_time_textview"
                       android:layout_weight="0.4"/>
                   <Button
                       android:id="@+id/bug_end_time_button"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingRight="20dp"
                       android:text="@string/project_end_time_textview"
                       android:layout_weight="0.4"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="20dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/bug_finder"
                       android:layout_weight="2"
                       android:textSize="20dp"/>

                   <EditText
                       android:id="@+id/bug_finder_edittext"
                       style="@style/editTextZ"
                       android:layout_weight="7"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="20dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/bug_reviser"
                       android:layout_weight="2"
                       android:textSize="20dp"/>

                   <EditText
                       android:id="@+id/bug_reviser_edittext"
                       style="@style/editTextZ"
                       android:layout_weight="7"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="20dp">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="@string/bug_state"
                       android:textSize="20dp"
                       android:layout_gravity="center_vertical" />

                   <Spinner
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/bug_state_sprinner"
                       android:layout_weight="1"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="20dp">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/bug_state"
                       android:textSize="20dp"
                       android:layout_gravity="center_vertical"
                       android:layout_weight="1" />

                   <Spinner
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/bug_level_sprinner"
                       android:layout_weight="1"/>
               </LinearLayout>
       </LinearLayout>


           <Button
               android:id="@+id/bug_search_button"
               style="@style/SearchButton"
               android:text="@string/check_button" />
       </LinearLayout>
   </ScrollView>

</LinearLayout>
