<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".bug.publicSearchBug.BugSearchFragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <LinearLayout
               style="@style/linearLayoutStyle">

               <!--项目名-->
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="20dp">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/project_name_edittext"
                       android:layout_weight="2"
                       android:textSize="20dp"/>

                   <EditText
                       style="@style/editText"
                       android:id="@+id/bug_project_name_edittext"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"/>
               </LinearLayout>

               <!--发现时间-->
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="20dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/bug_find_time"
                       android:layout_weight="2"
                       android:textSize="20dp"/>

                   <Button
                       android:id="@+id/bug_begin_time_button"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingRight="20dp"
                       android:text="@string/project_begin_time_textview"
                       android:layout_weight="1"/>
                   <Button
                       android:id="@+id/bug_end_time_button"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingRight="20dp"
                       android:text="@string/project_end_time_textview"
                       android:layout_weight="1"/>
               </LinearLayout>

               <!--修改时间-->
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="20dp"
                   android:id="@+id/bug_editTime_linearLayout">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/edit_time"
                       android:layout_weight="2"
                       android:textSize="20dp"/>

                   <Button
                       android:id="@+id/bug_edit_begin_time_button"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingRight="20dp"
                       android:text="@string/project_begin_time_textview"
                       android:layout_weight="1"/>
                   <Button
                       android:id="@+id/bug_edit_end_time_button"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingRight="20dp"
                       android:text="@string/project_end_time_textview"
                       android:layout_weight="1"/>
               </LinearLayout>

               <!--发现人-->
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="20dp"
                   android:id="@+id/bug_finder_linearLayout">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/bug_finder"
                       android:layout_weight="2"
                       android:textSize="20dp"/>

                   <EditText
                       style="@style/editText"
                       android:id="@+id/bug_finder_edittext"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"/>
               </LinearLayout>

               <!--修改人-->
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="20dp"
                   android:id="@+id/bug_reviser_linearLayout">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/bug_reviser"
                       android:layout_weight="2"
                       android:textSize="20dp"/>

                   <EditText
                       style="@style/editText"
                       android:id="@+id/bug_reviser_edittext"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"/>
               </LinearLayout>

               <!--bug状态-->
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="20dp">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="@string/bug_state"
                       android:textSize="20dp"
                       android:layout_gravity="center_vertical" />

                   <Spinner
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/bug_state_sprinner"
                       android:layout_weight="1"/>
               </LinearLayout>

               <!--bug等级-->
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="20dp">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/bug_version"
                       android:textSize="20dp"
                       android:layout_gravity="center_vertical"
                       android:layout_weight="1" />

                   <Spinner
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/bug_level_sprinner"
                       android:layout_weight="1"/>
               </LinearLayout>
       </LinearLayout>


           <Button
               android:id="@+id/bug_search_button"
               style="@style/SearchButton"
               android:text="@string/check_button" />
       </LinearLayout>
   </ScrollView>

</LinearLayout>
