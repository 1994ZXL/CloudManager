<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_my_memo"
    style="@style/CardView_LayoutStyle">

    <LinearLayout style="@style/linearLayoutStyle">

        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <TextView
                android:id="@+id/memo_card_title"
                style="@style/Text_view_Style"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/memo_card_create_time"
                style="@style/Text_view_Style"
                android:layout_weight="1"
                android:gravity="left" />

            <ImageButton
                android:id="@+id/memo_card_delete"
                style="@style/Text_view_Style"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/memo_background"
                android:src="@android:drawable/ic_menu_delete" />

        </LinearLayout>

        <LinearLayout style="@style/CardView_Viewline_LayoutStyle">

            <TextView
                android:id="@+id/memo_card_content"
                style="@style/Text_view_Style"
                android:maxLength="15" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>