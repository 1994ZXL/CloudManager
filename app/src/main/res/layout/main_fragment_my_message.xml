<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_my_message"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 头像-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/font"
            android:layout_weight="1"
            android:text="@string/head"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/demo"
            android:id="@+id/main_fragment_my_message_head_icon" />

    </LinearLayout>

    <!-- 姓名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            style="@style/font"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="@string/name" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/main_fragment_my_message_name"
            android:text="张三"/>

    </LinearLayout>

    <!-- 性别-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            style="@style/font"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="@string/sex" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:id="@+id/main_fragment_my_message_sexSprinner">

        </Spinner>
    </LinearLayout>

    <!-- 手机-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            style="@style/font"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="@string/phone" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/main_fragment_my_message_phone"
            android:text="12345678987"/>
    </LinearLayout>

    <!-- QQ-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            style="@style/font"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="@string/qq" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/main_fragment_my_message_qq"/>
    </LinearLayout>

    <!-- 微信-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            style="@style/font"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="@string/wechat" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/main_fragment_my_message_wechat"/>
    </LinearLayout>

    <!-- 邮箱-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            style="@style/font"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="@string/email" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/main_fragment_my_message_email"/>
    </LinearLayout>

    <!-- 地址-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            style="@style/font"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="@string/location"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/main_fragment_my_message_location"/>
    </LinearLayout>

    <!-- 详细地址-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            style="@style/font"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="@string/detail_location"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/main_fragment_my_message_detail_location"/>
    </LinearLayout>

    <!-- 身份证号码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            style="@style/font"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="@string/idcard"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/main_fragment_my_message_idcard"/>
    </LinearLayout>

    <!-- 在职状态-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            style="@style/font"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="@string/service_state"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/main_fragment_my_message_service_state"/>
    </LinearLayout>

</LinearLayout>
