<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_my_message"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 姓名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            style="@style/font"
            android:text="@string/name" />
        <EditText
            style="@style/editText"
            android:id="@+id/main_fragment_my_message_nameEditText"/>

    </LinearLayout>

    <!-- 性别-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            style="@style/font"
            android:text="@string/sex" />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:id="@+id/main_fragment_my_message_sexSprinner">

        </Spinner>
    </LinearLayout>

    <!-- 手机-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            style="@style/font"
            android:text="@string/phone" />
        <EditText
            style="@style/editText"
            android:id="@+id/main_fragment_my_message_phoneEditText"/>
    </LinearLayout>

    <!-- QQ-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            style="@style/font"
            android:text="@string/qq" />
        <EditText
            style="@style/editText"
            android:id="@+id/main_fragment_my_message_qqEditText"/>
    </LinearLayout>

    <!-- 微信-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            style="@style/font"
            android:text="@string/wechat" />
        <EditText
            style="@style/editText"
            android:id="@+id/main_fragment_my_message_wechatEditText"/>
    </LinearLayout>

    <!-- 地址-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            style="@style/font"
            android:text="@string/location"/>
        <EditText
            style="@style/editText"
            android:id="@+id/main_fragment_my_message_locationEditText"/>
    </LinearLayout>
</LinearLayout>
