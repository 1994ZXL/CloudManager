<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Parent_LayoutStyle"
    tools:context=".manageMember.projectManagerManageMember.ManageMemberSearchFragment">

    <ScrollView
        style="@style/ScrollView_Style">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                style="@style/linearLayoutStyle">

                <LinearLayout
                    style="@style/Toptitle_LayoutStyle">

                    <TextView
                        style="@style/toptextview_left"
                        android:text="@string/text_return"/>

                    <TextView
                        style="@style/toptextview_center"
                        android:text="@string/project_choose"/>

                    <TextView
                        style="@style/topview_right"
                        android:text="@string/text_clean"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/Viewline_LayoutStyle">

                    <TextView
                        style="@style/Text_view_Style"
                        android:text="@string/project_name_edittext" />

                    <EditText
                        android:id="@+id/pm_project_name_edittext"
                        android:hint="@string/input_project_name"
                        style="@style/EditText_Style"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/pm_member_search_button"
        style="@style/SearchButton"/>

</LinearLayout>
